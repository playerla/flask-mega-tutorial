{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Project Shell",
            "type": "shell",
            "command": "${input:shell}",
            "problemMatcher": []
        },
        {
            "label": "Run Docker in VirtualBox Shell",
            "type": "shell",
            "command": "ssh '${config:project-ssh_args_docker_in_virtualbox}'",
            "problemMatcher": []
        },
        {
            "label": "Run Heroku Shell",
            "type": "shell",
            "command": "heroku run bash",
            "problemMatcher": []
        },
        {
            "label": "Connect to heroku postgres",
            "type": "shell",
            "command": "heroku pg:psql"
        },
        {
            "label": "log heroku postgres",
            "type": "shell",
            "command": "heroku logs --tail"
        }
    ],
    "inputs": [
        {
          "type": "pickString",
          "id": "shell",
          "description": "Project shells",
          "options": [
            "heroku 'run bash'",
            "ssh '-i .vagrant\\machines\\microblog-docker\\virtualbox\\private_key -o StrictHostKeyChecking=no -t vagrant@192.168.33.11 sudo -i'"
          ]
        }
    ]
}